{
  "name": "数据库MCP服务器集合",
  "description": "支持多种数据库的MCP服务器，包括SQLite、PostgreSQL、MySQL、SQL Server等",
  "version": "1.0.0",
  "type": "database_access",
  "category": "数据处理",
  "servers": {
    "sqlite_mcp": {
      "name": "SQLite MCP服务器",
      "repository": "https://github.com/modelcontextprotocol/servers/tree/main/src/sqlite",
      "description": "轻量级SQLite数据库访问服务器",
      "features": [
        "SQLite数据库连接",
        "SQL查询执行",
        "表结构查看",
        "数据插入更新",
        "事务支持",
        "索引管理"
      ],
      "installation": {
        "method": "npm",
        "command": "npx -y @modelcontextprotocol/server-sqlite /path/to/database.db",
        "requirements": ["Node.js", "SQLite3"]
      },
      "configuration": {
        "database_path": "/path/to/your/database.db",
        "read_only": false,
        "timeout": 30000,
        "max_connections": 10
      }
    },
    "postgres_mcp": {
      "name": "PostgreSQL MCP服务器",
      "repository": "https://github.com/modelcontextprotocol/servers/tree/main/src/postgres",
      "description": "企业级PostgreSQL数据库访问服务器",
      "features": [
        "PostgreSQL连接",
        "复杂SQL查询",
        "存储过程调用",
        "JSON数据处理",
        "全文搜索",
        "数组操作",
        "地理数据支持"
      ],
      "installation": {
        "method": "npm",
        "command": "npx -y @modelcontextprotocol/server-postgres postgresql://user:password@localhost/dbname",
        "requirements": ["Node.js", "PostgreSQL客户端"]
      },
      "configuration": {
        "connection_string": "postgresql://user:password@localhost:5432/dbname",
        "ssl_mode": "prefer",
        "pool_size": 20,
        "query_timeout": 60000
      }
    },
    "mysql_mcp": {
      "name": "MySQL MCP服务器",
      "repository": "https://github.com/designcomputer/mysql_mcp_server",
      "description": "MySQL数据库访问和管理服务器",
      "features": [
        "MySQL数据库连接",
        "表操作管理",
        "数据查询分析",
        "性能监控",
        "备份恢复",
        "用户权限管理"
      ],
      "installation": {
        "method": "git",
        "steps": [
          "git clone https://github.com/designcomputer/mysql_mcp_server.git",
          "cd mysql_mcp_server",
          "pip install -r requirements.txt",
          "python server.py"
        ],
        "requirements": ["Python 3.8+", "MySQL客户端库"]
      },
      "configuration": {
        "host": "localhost",
        "port": 3306,
        "user": "your_username",
        "password": "your_password",
        "database": "your_database",
        "charset": "utf8mb4"
      }
    },
    "sqlserver_mcp": {
      "name": "SQL Server MCP服务器",
      "repository": "https://github.com/modelcontextprotocol/servers/tree/main/src/mssql",
      "description": "Microsoft SQL Server数据库访问服务器",
      "features": [
        "SQL Server连接",
        "T-SQL查询支持",
        "存储过程执行",
        "批量操作",
        "XML数据处理",
        "CLR集成"
      ],
      "installation": {
        "method": "npm",
        "command": "npx -y @modelcontextprotocol/server-mssql",
        "requirements": ["Node.js", "SQL Server驱动"]
      },
      "configuration": {
        "server": "localhost",
        "database": "your_database",
        "authentication": "sql",
        "user": "sa",
        "password": "your_password",
        "encrypt": true
      }
    }
  },
  "common_features": [
    "数据库连接管理",
    "SQL查询执行",
    "表结构检查",
    "数据导入导出",
    "查询结果格式化",
    "错误处理和日志",
    "连接池管理",
    "安全认证"
  ],
  "claude_desktop_config": {
    "mcpServers": {
      "sqlite": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-sqlite",
          "/path/to/your/database.db"
        ]
      },
      "postgres": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-postgres",
          "postgresql://user:password@localhost/dbname"
        ]
      }
    }
  },
  "environment_variables": {
    "DB_CONNECTION_STRING": "数据库连接字符串",
    "DB_MAX_CONNECTIONS": "最大连接数",
    "DB_TIMEOUT": "查询超时时间",
