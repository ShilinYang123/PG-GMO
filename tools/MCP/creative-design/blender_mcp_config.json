    "output_format": "PNG",
    "resolution_x": 1920,
    "resolution_y": 1080
  },
  "requirements": {
    "blender_version": ">=3.0",
    "python_version": ">=3.9",
    "system_ram": ">=8GB",
    "gpu_support": "CUDA或OpenCL（可选）"
