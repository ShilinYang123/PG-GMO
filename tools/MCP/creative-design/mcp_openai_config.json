{
  "name": "MCP-OpenAI服务",
  "description": "基于MCP协议的中间件，让Claude能直接调用OpenAI的各种模型，支持GPT-3.5/4对话和DALL·E 2/3图像生成",
  "version": "1.0.0",
  "type": "image_generation",
  "repository": "https://github.com/donghao1393/mcp-openai",
  "category": "创意设计",
  "features": [
    "GPT-3.5/4模型对话",
    "DALL·E 2图像生成",
    "DALL·E 3图像生成",
    "对话中直接显示生成图片",
    "多模型协同工作",
    "配置灵活",
    "性能稳定"
  ],
  "installation_steps": [
    "克隆仓库: git clone https://github.com/donghao1393/mcp-openai.git",
    "进入目录: cd mcp-openai",
    "安装依赖: pip install -r requirements.txt",
    "配置OpenAI API密钥",
    "启动MCP服务器",
    "配置Claude Desktop连接"
  ],
  "api_endpoints": {
    "text_generation": "/api/v1/chat/completions",
    "image_generation": "/api/v1/images/generations",
    "model_list": "/api/v1/models"
  },
  "supported_models": {
    "text": [
      "gpt-3.5-turbo",
      "gpt-4",
      "gpt-4-turbo"
    ],
    "image": [
      "dall-e-2",
      "dall-e-3"
    ]
  },
  "configuration": {
    "openai_api_key": "your_openai_api_key_here",
    "server_port": 8000,
    "max_tokens": 4096,
    "temperature": 0.7,
    "image_size": "1024x1024",
    "image_quality": "standard"
  },
  "status": "部分安装",
