{
  "name": "PG-GMO项目开发环境",
  "dockerComposeFile": "../docker-compose.dev.yml",
  "service": "app-dev",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  
  // 开发容器功能
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGypDependencies": true,
      "version": "18"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true"
    }
  },
  
  // VS Code 设置
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "python.formatting.blackArgs": ["--line-length=88"],
        "typescript.preferences.quoteStyle": "single",
        "javascript.preferences.quoteStyle": "single",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true,
          "source.organizeImports": true
        },
        "files.associations": {
          "*.json": "jsonc"
        },
        "emmet.includeLanguages": {
          "javascript": "javascriptreact",
          "typescript": "typescriptreact"
        },
        "tailwindCSS.includeLanguages": {
          "typescript": "javascript",
          "typescriptreact": "javascript"
        },
        "css.validate": false,
        "less.validate": false,
        "scss.validate": false
      },
      
      "extensions": [
        // 基础开发工具
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        
        // React 开发
        "ms-vscode.vscode-react-native",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        
        // Python 开发
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-python.isort",
        
        // 数据库工具
        "ms-ossdata.vscode-postgresql",
        "cweijan.vscode-redis-client",
        
        // Git 工具
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        
        // 容器工具
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        
        // 代码质量
        "sonarsource.sonarlint-vscode",
        "streetsidesoftware.code-spell-checker",
        
        // 实用工具
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-markdown",
        "yzhang.markdown-all-in-one",
        "shd101wyy.markdown-preview-enhanced",
        
        // 主题和图标
        "pkief.material-icon-theme",
        "github.github-vscode-theme",
        
        // API 开发
        "humao.rest-client",
        "42crunch.vscode-openapi",
        
        // 测试工具
        "ms-vscode.test-adapter-converter",
        "hbenl.vscode-test-explorer"
      ]
    }
  },
  
  // 端口转发
  "forwardPorts": [3000, 8000, 5432, 6379, 8025],
  "portsAttributes": {
    "3000": {
      "label": "前端应用",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "后端API",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    },
    "8025": {
      "label": "MailHog Web UI",
      "onAutoForward": "notify"
    }
  },
  
  // 容器启动后执行的命令
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  
  // 挂载配置
  "mounts": [
    "source=${localWorkspaceFolder}/.vscode,target=/workspace/.vscode,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/node_modules,target=/workspace/node_modules,type=volume",
    "source=pg-gmo-venv,target=/workspace/venv,type=volume"
  ],
  
  // 环境变量
  "containerEnv": {
    "NODE_ENV": "development",
    "PYTHONPATH": "/workspace",
    "PATH": "/workspace/venv/bin:${containerEnv:PATH}"
  },
  
  // 用户设置
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  
  // 生命周期脚本
  "initializeCommand": "echo '正在初始化PG-GMO工作室开发环境...'",
  "onCreateCommand": "echo '开发容器创建完成'",
  "updateContentCommand": "echo '更新开发环境内容'",
  "postStartCommand": "echo '开发环境启动完成，可以开始编码了！'"
}